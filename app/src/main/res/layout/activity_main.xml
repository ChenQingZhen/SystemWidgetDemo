<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.administrator.systemwidgetdemo.MainActivity">
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TeachingView"
        android:onClick="btnTeachingView"
        />
   <Button
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="MyTextView"
       android:onClick="btnMyTextView"
       />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ShineTextView"
        android:onClick="btnShineTextView"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CircleProgressView"
        android:onClick="btnCircleProgressView"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="VolumeView"
        android:onClick="btnVolumeView"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MyScrollView"
        android:onClick="btnMyScrollView"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TopBar"
        android:onClick="TopBar"
        />
</LinearLayout>
